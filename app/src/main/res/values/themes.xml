<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/lighter_blueish_black</item>
    </style>

    <!--    CARD VIEW-->
    <style name="ElevatedCardView">
        <item name="android:backgroundTint">@color/white</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="background">?android:attr/selectableItemBackground</item>
    </style>

    <!--    TEXT-->
    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textColor">@color/text_black_transparent</item>
    </style>

    <style name="Text.Description">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Header.Big">
        <item name="android:textSize">42sp</item>
    </style>

    <!--    BUTTON-->
    <style name="Button">
        <item name="android:background">@drawable/dr_button_gradient</item>
        <item name="backgroundTint">@null</item>
        <item name="android:padding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!--    EDIT TEXT-->
    <style name="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Theme.StoryApp.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.StoryApp.AppWidgetContainer" parent="Theme.StoryApp.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>

</resources>